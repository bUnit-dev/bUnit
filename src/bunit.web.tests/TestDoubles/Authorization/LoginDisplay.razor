@using Microsoft.AspNetCore.Components.Authorization
<CascadingAuthenticationState>
	<AuthorizeView>
		<Authorized>
			Hello, @context.User.Identity.Name!
			<button>Log out</button>
		</Authorized>
		<NotAuthorized>
			<a href="authentication/login">Log in</a>
		</NotAuthorized>
	</AuthorizeView>
</CascadingAuthenticationState>
