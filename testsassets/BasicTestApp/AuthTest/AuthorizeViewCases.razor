            <p class="not-authorized">You're not authorized, @(context.User.Identity.Name ?? "anonymous")</p>
        </NotAuthorized>
    </AuthorizeView>
</div>

<div id="authorize-policy">
    <h3>Scenario: Require policy</h3>

